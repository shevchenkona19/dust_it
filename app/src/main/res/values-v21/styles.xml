<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorAccent">@color/colorAccentDefault</item>
        <item name="android:colorPrimary">@color/colorPrimaryDefault</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDarkDefault</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppThemeDayNight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#000</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    
    <style name="MasterDayNight" parent="AppThemeDayNight">
        <item name="android:windowExitTransition">@transition/main_exit</item>
        <item name="android:windowReenterTransition">@transition/main_reenter</item>
    </style>

    <style name="DetailDayNight" parent="AppThemeDayNight">
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowEnterTransition">@transition/detail_enter</item>
    </style>

    <style name="HelloTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="colorAccent">#b375e0</item>
        <item name="android:statusBarColor">@null</item>
        <item name="android:colorControlNormal">#b375e0</item>
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>