<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorAccent">@color/colorAccentDefault</item>
        <item name="android:colorPrimary">@color/colorPrimaryDefault</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDarkDefault</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppThemeDayNight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HelloTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/main_gradient_color</item>
        <item name="colorAccent">#fff</item>
        <item name="android:statusBarColor">@null</item>
        <item name="android:colorControlNormal">#fff</item>
    </style>
</resources>