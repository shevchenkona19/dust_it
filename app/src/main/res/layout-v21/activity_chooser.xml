<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/clChooserLayout"
    android:layout_height="match_parent"
    tools:context="dustit.clientapp.mvp.ui.activities.ChooserActivity">

    <Button
        android:id="@+id/btnChooserLogin"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/btn_hello_accent"
        android:text="Войти"
        android:transitionName="btnLogin"
        app:layout_constraintBottom_toTopOf="@+id/btnChooserRegister"
        app:layout_constraintLeft_toLeftOf="@+id/ivChooserIcon"
        app:layout_constraintRight_toRightOf="@+id/ivChooserIcon"
        app:layout_constraintTop_toBottomOf="@+id/ivChooserIcon"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnChooserRegister"
        android:layout_width="0dp"
        android:transitionName="btnRegister"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textColor="#aaeeeeee"
        android:background="@drawable/btn_regular_primary"
        android:text="Регистрация"
        app:layout_constraintLeft_toLeftOf="@+id/btnChooserLogin"
        app:layout_constraintRight_toRightOf="@+id/btnChooserLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@+id/btnChooserLogin"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/ivChooserIcon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerInside"
        android:transitionName="icon"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:srcCompat="@drawable/icon_no_background"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="284dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="57dp"
        tools:layout_editor_absoluteX="0dp" />
</android.support.constraint.ConstraintLayout>
