<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/supFavoritesPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:gravity="bottom"
    app:umanoFadeColor="@null"
    app:umanoOverlay="true"
    app:umanoPanelHeight="100dp"
    app:umanoParallaxOffset="200dp"
    app:umanoScrollableView="@+id/rvFavoritesList"
    app:umanoShadowHeight="0dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbarAccount"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:expanded="false">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tbAccountSettingsToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_left_simple"
                app:title="@string/profile" />

        </android.support.design.widget.AppBarLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appbarAccount"
            android:layout_marginBottom="100dp">

            <RelativeLayout
                android:id="@+id/cvAccountSettingsCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="0dp"
                android:transitionName="trans1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/clAccountLoadingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <ProgressBar
                        android:id="@+id/pbAccountLoading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/btnAccountReload"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/try_to_load_one_more_time"
                        android:textSize="16sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.5" />

                    <TextView
                        android:id="@+id/tvAccountFailedToLoad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="52dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/sry_cant_load_account"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@id/btnAccountReload"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <ScrollView
                    android:id="@+id/svAccountView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/clAccountLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">

                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/sdvAccountUserIcon"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="24dp"
                                android:layout_marginRight="8dp"
                                android:transitionName="@string/account_photo_transition"
                                app:layout_constraintBottom_toTopOf="@+id/cpbAccountLoadingPhoto"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed"
                                app:roundAsCircle="true" />

                            <TextView
                                android:id="@+id/tvAccountUsername"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp"
                                android:gravity="center"
                                android:textSize="20sp"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintLeft_toLeftOf="@+id/sdvAccountUserIcon"
                                app:layout_constraintRight_toRightOf="@+id/sdvAccountUserIcon"
                                app:layout_constraintTop_toBottomOf="@+id/cpbAccountLoadingPhoto" />

                            <Button
                                android:id="@+id/btnAccountRegister"
                                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/register"
                                android:textColor="#fff"
                                android:visibility="gone"
                                app:layout_constraintEnd_toEndOf="@+id/tvAccountUsername"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintLeft_toRightOf="@+id/sdvAccountUserIcon"
                                app:layout_constraintStart_toStartOf="@+id/tvAccountUsername"
                                app:layout_constraintTop_toBottomOf="@+id/tvAccountUsername" />

                            <com.github.rahatarmanahmed.cpv.CircularProgressView
                                android:id="@+id/cpbAccountLoadingPhoto"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:visibility="visible"
                                app:cpv_animAutostart="false"
                                app:cpv_animSyncDuration="500"
                                app:cpv_color="#000"
                                app:cpv_maxProgress="100"
                                app:layout_constraintBottom_toTopOf="@+id/tvAccountUsername"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintLeft_toLeftOf="@id/sdvAccountUserIcon"
                                app:layout_constraintRight_toRightOf="@id/sdvAccountUserIcon"
                                app:layout_constraintTop_toBottomOf="@+id/sdvAccountUserIcon" />

                        </android.support.constraint.ConstraintLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/achievementsList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/clAccountLayout"
                            android:layoutAnimation="@anim/item_feed_layout_animation"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp" />

                    </RelativeLayout>

                </ScrollView>
            </RelativeLayout>
        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cvAccountFavoritesCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        app:cardCornerRadius="12dp">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/clFavoritesParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="dustit.clientapp.mvp.ui.activities.FavoritesActivity">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/favoritesToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toStartOf="@+id/ivFavIcon"
                    android:ellipsize="end"
                    android:text="@string/favorites"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@id/ivFavIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:src="@drawable/ic_saved" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:alpha="0.1"
                    android:background="#101010" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@id/rvFavoritesList"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layoutAnimation="@anim/item_feed_layout_animation"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/favoritesToolbar" />

            <ProgressBar
                android:id="@+id/pbFavoritesLoading"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/favoritesToolbar"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvFavoritesFailedToLoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/sry_something_is_wrong"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/favoritesToolbar" />

            <Button
                android:id="@+id/btnFavoritesFailedToLoad"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="?attr/selectableItemBackground"
                android:text="@string/try_to_load_one_more_time"
                android:textColor="@color/colorPrimaryDefault"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFavoritesFailedToLoad" />

            <TextView
                android:id="@+id/tvFavoritesEmpty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/empty_set_favorites"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/favoritesToolbar" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>