<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flActivitySettingsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    tools:context="dustit.clientapp.mvp.ui.activities.SettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbSettingsToolbar"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/ic_arrow_left_simple"
        app:title="@string/settings" />

    <RelativeLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="@+id/guideline7">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSettingsLogout"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/cvSettingsCard"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="-45dp"
            android:background="@drawable/btn_hello_accent"
            android:text="@string/logout"
            android:textColor="#fff"
            android:visibility="visible"
            app:elevation="9dp" />

        <FrameLayout
            android:id="@id/cvSettingsCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="7dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <RelativeLayout
                        android:id="@+id/relativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="?attr/selectableItemBackground"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tvSettingsChooseThemeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/choose_theme"
                            tools:ignore="RelativeOverlap" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spSettingsThemeChooser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

<!--                    <RelativeLayout-->
<!--                        android:id="@+id/rlSettingsLanguagePicker"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="70dp"-->
<!--                        android:background="?attr/selectableItemBackground"-->
<!--                        app:layout_constraintEnd_toEndOf="parent"-->
<!--                        app:layout_constraintStart_toStartOf="parent"-->
<!--                        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">-->

<!--                        <TextView-->
<!--                            android:id="@+id/tvSettingChangeLanguage"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_centerVertical="true"-->
<!--                            android:text="@string/pick_language"-->
<!--                            tools:ignore="RelativeOverlap" />-->

<!--                        <TextView-->
<!--                            android:id="@+id/tvSettingsCurrentLanguage"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_alignParentEnd="true"-->
<!--                            android:layout_centerVertical="true"-->
<!--                            android:layout_marginEnd="16dp" />-->
<!--                    </RelativeLayout>-->

                    <RelativeLayout
                        android:id="@+id/rlSettingsPrivacy"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="?attr/selectableItemBackground"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

                        <TextView
                            android:id="@+id/tvSettingPrivacyLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_toStartOf="@+id/ivSettingsPrivacyArrow"
                            android:layout_alignParentStart="true"
                            android:text="@string/view_policy"
                            tools:ignore="RelativeOverlap" />

                        <ImageView
                            android:id="@id/ivSettingsPrivacyArrow"
                            android:layout_width="15dp"
                            app:srcCompat="@drawable/ic_arrow_right_simple"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:contentDescription="@string/view_policy" />
                    </RelativeLayout>
                    <RelativeLayout
                    android:id="@+id/rlSettingsNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="?attr/selectableItemBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

                    <TextView
                        android:id="@+id/tvSettingsNotifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_toStartOf="@+id/swSettingsNotifications"
                        android:layout_alignParentStart="true"
                        android:text="@string/enable_notifications"
                        tools:ignore="RelativeOverlap" />

                    <Switch
                        android:id="@id/swSettingsNotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp" />
                </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>
